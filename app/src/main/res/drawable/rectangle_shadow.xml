<!-- rounded_button.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@color/colorPrimary" />
            <corners android:radius="@dimen/_10sdp" />
        </shape>
    </item>
    <!-- Shadow -->
    <item android:top="@dimen/_1sdp" android:left="@dimen/_1sdp" android:right="@dimen/_1sdp" android:bottom="@dimen/_3sdp">
        <shape android:shape="oval">
            <solid android:color="#8692f7" />
            <corners android:radius="@dimen/_8sdp" />
        </shape>
    </item>
</layer-list>