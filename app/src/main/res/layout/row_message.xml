<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errormessage_row"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dim_3dp"
    android:layout_marginRight="@dimen/dim_8dp"
    android:clickable="true"
    app:cardBackgroundColor="@color/magenta"
    app:cardCornerRadius="@dimen/dim_8dp">

    <RelativeLayout
        android:padding="@dimen/dim_3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_message"
            android:paddingEnd="@dimen/dim_5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:fontFamily="@font/helvetica"
            android:padding="@dimen/dim_3dp"
            android:textSize="@dimen/text_11"
            android:text="@string/tuck_hips"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_toRightOf="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="@dimen/dim_5dp"
            android:background="@drawable/round_button_red"
            android:fontFamily="@font/helvetica"
            android:paddingLeft="@dimen/dim_5dp"
            android:paddingRight="@dimen/dim_5dp"
            android:text="21"
            android:textSize="@dimen/text_11"
            android:textColor="#fff"></TextView>

    </RelativeLayout>


</androidx.cardview.widget.CardView>