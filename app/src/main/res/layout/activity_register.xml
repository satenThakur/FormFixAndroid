<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"

    tools:context=".activity.LoginActivity">
    <RelativeLayout
        android:layout_height="@dimen/_230sdp"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/lavender">
        <ImageView
        android:id="@+id/back_btn"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:padding="@dimen/_3sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/iv_back_arrow"/></RelativeLayout>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_marginTop="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_12sdp"
        android:layout_marginRight="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_50sdp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:cardElevation="@dimen/_10sdp"
        android:elevation="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_25sdp">

        <RelativeLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ProgressBar
                android:id="@+id/progress_circular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />
            <TextView
                android:id="@+id/lbl1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:fontFamily="@font/helvetica_bold"
                android:textSize="@dimen/_16ssp"
                android:text="Register"
                android:textColor="@color/colorPrimary" />
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_name"
                android:layout_below="@+id/lbl1"
                android:layout_marginTop="@dimen/_40sdp"
                android:background="@drawable/rounded_corner_bg"
                android:singleLine="true"
                android:hint="Enter name"
                android:fontFamily="@font/helvetica"
                android:inputType="text"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/light_black_color"
                android:textColorHint="@color/slate_color"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"/>
            <LinearLayout
                android:id="@+id/llNumber"
                android:background="@drawable/rounded_corner_bg"
                android:layout_below="@+id/ed_name"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingStart="@dimen/_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <com.hbb20.CountryCodePicker
                    android:id="@+id/ccp"
                    app:ccp_defaultNameCode="US"
                    app:ccp_showFullName="false"
                    app:ccp_showPhoneCode="true"
                    app:ccp_showNameCode="false"
                    app:ccp_showFlag="true"
                    app:ccp_autoFormatNumber="true"
                    app:ccp_showArrow="true"
                    app:ccp_textSize="@dimen/_14ssp"
                    app:ccp_arrowSize="@dimen/_16sdp"
                    app:ccpDialog_keyboardAutoPopup="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/ed_phone"
                    android:background="@null"
                    android:singleLine="true"
                    android:hint="Phone Number"
                    android:fontFamily="@font/helvetica"
                    android:inputType="number"
                    android:maxLength="10"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/light_black_color"
                    android:textColorHint="@color/slate_color"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_email"
                android:layout_below="@+id/llNumber"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_bg"
                android:singleLine="true"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/light_black_color"
                android:textColorHint="@color/slate_color"
                android:hint="Enter email id"
                android:fontFamily="@font/helvetica"
                android:inputType="textEmailAddress"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_weight"
                android:layout_below="@+id/ed_email"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_bg"
                android:singleLine="true"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/light_black_color"
                android:textColorHint="@color/slate_color"
                android:hint="Enter weight in pound"
                android:fontFamily="@font/helvetica"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"/>
            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/ed_height"
                android:layout_below="@+id/ed_weight"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/rounded_corner_bg"
                android:singleLine="true"
                android:textSize="@dimen/_13ssp"
                android:textColor="@color/light_black_color"
                android:textColorHint="@color/slate_color"
                android:hint="Enter height in cms"
                android:fontFamily="@font/helvetica"
                android:inputType="numberDecimal"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_register"
                android:layout_below="@+id/ed_height"
                android:layout_marginTop="@dimen/_15sdp"
                android:background="@drawable/rounded_purple_border_button"
                android:text="Create account"
                android:textAllCaps="true"
                android:textSize="@dimen/_14ssp"
                android:fontFamily="@font/helvetica"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_35sdp"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>