<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/errormessage_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:background="@color/white"
    app:cardCornerRadius="@dimen/_8sdp">
   <RelativeLayout
        android:paddingBottom="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp">
        <ImageView
            android:id="@+id/video"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginLeft="@dimen/_minus5sdp"
            android:src="@drawable/iv_video_placeholder"
             android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:tint="@color/lavendrrr"
            tools:ignore="UseAppTint">
        </ImageView>

        <TextView
            android:id="@+id/tv_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/video"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toEndOf="@+id/video"
            android:singleLine="true"
            android:text="Squats"
            android:textSize="@dimen/_11ssp"
            android:fontFamily="@font/helvetica_bold"/>
        <ImageView
            android:id="@+id/btn_delete"
            android:src="@drawable/iv_delete"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/btn_share"
            android:layout_below="@+id/btn_delete"
            android:layout_alignEnd="@+id/btn_delete"
            android:src="@drawable/iv_share"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_date"
            android:drawableLeft="@drawable/iv_calender"
            android:layout_alignStart="@+id/tv_exercise"
            android:layout_below="@+id/tv_exercise"
            android:layout_marginLeft="@dimen/_minus5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="Monday, 16, May, 2024"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/helvetica"/>
        <TextView
            android:id="@+id/tv_time"
            android:layout_toRightOf="@+id/tv_date"
            android:layout_marginLeft="@dimen/_3sdp"
            android:drawableLeft="@drawable/iv_time"
            android:layout_below="@+id/tv_exercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="10:10 am"
            android:textColor="@color/black_color"
            android:textSize="@dimen/_9ssp"
            android:fontFamily="@font/helvetica"/>



    </RelativeLayout>





</androidx.cardview.widget.CardView>