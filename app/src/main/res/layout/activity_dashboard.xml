<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".activity.DashboardActivity">

    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:elevation="10dp">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>


        </com.google.android.material.appbar.AppBarLayout>
        <com.cunoraz.tagview.TagView
            android:id="@+id/tag_group"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/btn_start_camera"
            android:layout_below="@+id/app_bar_layout"
            android:layout_marginStart="@dimen/dim_20dp"
            android:layout_marginTop="@dimen/dim_24dp"
            android:layout_marginEnd="@dimen/dim_20dp"
            android:layout_marginBottom="@dimen/dim_14dp"
            app:lineMargin="@dimen/dim_20dp"
            app:tagMargin="@dimen/dim_10dp"
            app:textPaddingBottom="@dimen/dim_8dp"
            app:textPaddingLeft="@dimen/dim_10dp"
            app:textPaddingRight="@dimen/dim_10dp"
            app:textPaddingTop="@dimen/dim_8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start_camera"
            android:layout_width="@dimen/dim_128dp"
            android:layout_height="@dimen/dim_128dp"
            android:layout_centerInParent="true"
            android:elevation="@dimen/dim_50dp"
            android:background="@drawable/rectangle_shadow"
            android:fontFamily="@font/helvetica_rounded_bold"
            android:gravity="center_vertical|center_horizontal"
            android:letterSpacing="0.05"
            android:paddingLeft="@dimen/dim_20dp"
            android:paddingTop="@dimen/dim_12dp"
            android:paddingRight="@dimen/dim_20dp"
            android:paddingBottom="@dimen/dim_12dp"
            android:text="Push\nTo\nStart"
            android:textColor="#fff"
            android:textSize="@dimen/text_15"></androidx.appcompat.widget.AppCompatButton>



    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        android:background="@color/white"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/drawer_menu"
        app:itemIconTint="@color/colorPrimary"
        app:itemTextColor="@color/colorPrimary"/>

</androidx.drawerlayout.widget.DrawerLayout>



